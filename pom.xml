        <hibernate.core.version>4.1.0.Final</hibernate.core.version>
        <log4j.version>1.2.15</log4j.version>
        <!-- Development properties  -->
        <strip.versions>true</strip.versions>
        <use.compression>false</use.compression>
        <add.artifact.descriptors>false</add.artifact.descriptors>
        <maven.test.skip>true</maven.test.skip>
        <filtering.enabled>true</filtering.enabled>
    </properties>

    <scm>
        <connection>scm:svn:https://scm.infusiontest.com/svn/cas/tags/cas-1.0.0.541</connection>
        <developerConnection>scm:svn:https://scm.infusiontest.com/svn/cas/tags/cas-1.0.0.541</developerConnection>
        <url>https://scm.infusiontest.com/svn/cas/tags/cas-1.0.0.541</url>
    </scm>

    <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <!-- Optimize performance for JAR plugin under development profile -->
                <configuration>
                    <archive>
                        <compress>${use.compression}</compress>
                        <addMavenDescriptor>${add.artifact.descriptors}</addMavenDescriptor>
                    </archive>
                </configuration>
            </plugin>
            <!-- Configure modules to be excluded when generating reports -->
            <plugin>
                <artifactId>maven-site-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <overlays>
                        <overlay>
                            <groupId>org.jasig.cas</groupId>
                            <artifactId>cas-server-webapp</artifactId>
                            <excludes>
                                <exclude>WEB-INF/lib/standard-1.1.2.jar</exclude>
                                <exclude>WEB-INF/lib/jstl-1.1.2.jar</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <configuration>
                    <server>myserver</server>
                    <path>/</path>
                    <warSourceDirectory>${basedir}/target/${project.artifactId}-${project.version}</warSourceDirectory>
                    <contextFile>${basedir}/tomcat/context.xml</contextFile>
                    <port>7070</port>
                    <httpsPort>7443</httpsPort>
                    <keystoreFile>${basedir}/tomcat/infusiontest.com.jks</keystoreFile>
                    <keystorePass>[er1c]5425</keystorePass>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- Used only when invoking release:perform so as not to re-run tests as part of the deployment-->
            <id>notest</id>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </profile>

        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.zeroturnaround</groupId>
                        <artifactId>jrebel-maven-plugin</artifactId>
                        <version>1.0.7</version>
                        <executions>
                            <execution>
                                <id>generate-rebel-xml</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

