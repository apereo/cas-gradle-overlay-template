<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <decorator name="anonymous" page="anonymous.jsp">
        <pattern>/login</pattern>
        <pattern>/logout</pattern>
    </decorator>
    <decorator name="modal" page="modal.jsp">
        <pattern>/registration</pattern>
    </decorator>
    <decorator name="central" page="central.jsp">
        <pattern>/central</pattern>
    </decorator>
    <decorator name="anonymousNoLogo" page="anonymousNoLogo.jsp">
    </decorator>
    <decorator name="plain" page="plain.jsp">
    </decorator>

    <!-- TODO: better to just exclude from SiteMesh altogether -->
    <decorator name="none" page="none.jsp">
        <pattern>/central/renameAccount</pattern>
        <pattern>/central/verifyExistingPassword</pattern>
        <pattern>/rest</pattern>
    </decorator>
</decorators>
